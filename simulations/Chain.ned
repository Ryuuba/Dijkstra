package dsbase.simulations;
import dsbase.INode;

import dsbase.Edge;

network Chain {
    parameters:
        @display("bgb=300,300");
        string kind;
        int w = default(1);
        int size = default(10);
    submodules:
        node[size] : <kind> like INode; // Indicate the kind of node
    connections:
        for i=0..size-2 {
            node[i].port++ <--> Edge{weight = 1;} <--> node[(i+1)].port++;
        }
}